    <script>
        $(document).ready(function () {
            $('.select-menu').on('click', function () {
                var dropdown = $(this).next('.select-menu-dropdown');
                var windowHeight = $(window).height();
                var dropdownHeight = dropdown.outerHeight();
                var dropdownTop = dropdown.offset().top - $(window).scrollTop();

                if (dropdownTop + dropdownHeight > windowHeight) {
                    dropdown.css('max-height', windowHeight - dropdownTop - 20);
                } else {
                    dropdown.css('max-height', '');
                }

                dropdown.toggle();
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('.select-menu').length) {
                    $('.select-menu-dropdown').hide();
                }
            });
        });

    </script>

