<body style="background-image: url('/img/signup-bg.jpg');">

    <div class="container">

        
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-1">
                    <div class="card-body p-0">
                        
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img src="~/img/about-img.jpg" alt="#">
                                <img src="~/img/blog1.jpg" alt="#">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4" style="font-weight: bold;font-size: 28px;">
                                            Hoşgeldiniz!
                                        </h1>
                                    </div>
                                    <div class="giris">
                                        <div class="form">
                                            <form class="giris-from" method="post" action="@Url.Action("Giris", "User")">
